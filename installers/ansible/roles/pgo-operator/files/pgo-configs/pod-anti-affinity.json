                "podAntiAffinity": {
                    "{{.AffinityType}}": [
                        {
                            {{if eq .AffinityType "preferredDuringSchedulingIgnoredDuringExecution"}}
                            "weight": 1,
                            "podAffinityTerm": {
                            {{end}}
                                "labelSelector": {
                                    "matchExpressions": [
                                        {
                                            "key": "{{.VendorLabelKey}}",
                                            "operator": "In",
                                            "values": [
                                                "{{.VendorLabelValue}}"
                                            ]
                                        },
                                        {
                                            "key": "{{.PodAntiAffinityLabelKey}}",
                                            {{if eq .AffinityType "requiredDuringSchedulingIgnoredDuringExecution"}}
                                            "operator": "In",
                                            "values": [
                                                "required",
                                                "require"
                                            ]
                                            {{else}}
                                            "operator": "Exists"
                                            {{end}}
                                        },
                                        {
                                            "key": "pg-cluster",
                                            "operator": "In",
                                            "values": [
                                                "{{.ClusterName}}"
                                            ]
                                        },
                                        {{ if eq .DeploymentType "0" }}
                                        {
                                            "key": "pgo-pg-database",
                                            "operator": "Exists"
                                        }
                                        {{ else if eq .DeploymentType "1" }}
                                        {
                                            "key": "pgo-backrest",
                                            "operator": "Exists"
                                        }
                                        {{ else if eq .DeploymentType "2" }}
                                        {
                                            "key": "crunchy-pgbouncer",
                                            "operator": "Exists"
                                        }
                                        {{ end }}
                                    ]
                                },
                                "topologyKey": "kubernetes.io/hostname"
                            {{if eq .AffinityType "preferredDuringSchedulingIgnoredDuringExecution"}}
                            }
                            {{end}}
                        }
                    ]
                }
